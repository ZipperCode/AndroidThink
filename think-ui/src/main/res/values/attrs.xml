<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="NavigationView">
        <attr name="title_array" format="reference"/>
        <attr name="icon_array" format="reference"/>
    </declare-styleable>

    <declare-styleable name="NavigationItemView">
        <attr name="icon" format="reference"/>
        <attr name="title" format="string|reference"/>
        <attr name="text_color" format="color|reference"/>
        <attr name="icon_size" format="dimension|reference"/>
        <attr name="text_size" format="dimension|reference"/>
        <attr name="text_color_state" format="reference"/>
    </declare-styleable>

    <attr name="border_radius" format="dimension|reference"/>
    <attr name="left_top_radius" format="dimension|reference"/>
    <attr name="right_top_radius" format="dimension|reference"/>
    <attr name="left_bottom_radius" format="dimension|reference"/>
    <attr name="right_bottom_radius" format="dimension|reference"/>
    <declare-styleable name="RadiusFrameLayout">
        <attr name="left_top_radius" />
        <attr name="right_top_radius" />
        <attr name="left_bottom_radius" />
        <attr name="right_bottom_radius"/>
        <attr name="border_radius"/>
        <attr name="transparent" format="float"/>
    </declare-styleable>

    <!-- 自定义验证码输入框-->
    <declare-styleable name="VerificationCodeView">
        <!--输入框的数量-->
        <attr name="child_number" format="integer" />
        <!--输入类型-->
        <attr name="child_inputType">
            <enum name="number" value="0" />
            <enum name="text" value="1" />
            <enum name="password" value="2" />
        </attr>
        <!--输入框的宽度-->
        <attr name="child_width" format="dimension|reference" />
        <!--输入框的宽度-->
        <attr name="child_height" format="dimension|reference" />
        <!--输入框文字颜色-->
        <attr name="child_text_color" format="color|reference" />
        <!--输入框文字大小-->
        <attr name="child_text_size" format="dimension|reference" />
        <!--输入框背景-->
        <attr name="child_style" format="reference" />
        <!--光标样式-->
        <attr name="child_input_cursor" format="reference" />
        <!--是否隐藏光标-->
        <attr name="child_cursor_visible" format="boolean" />
        <!--输入框间距-->
        <attr name="child_spacing" format="dimension|reference" />
        <!--输入框水平间隔-->
        <attr name="child_horizontal_spacing" format="dimension"/>
        <!--输入框垂直间隔-->
        <attr name="child_vertical_spacing" format="dimension"/>
        <!--输入框获得焦点的样式-->
        <attr name="child_focus_style" format="reference"/>
        <!--输入框失去焦点的样式-->
        <attr name="child_normal_style" format="reference"/>

    </declare-styleable>

    <declare-styleable name="StateLayout">
        <attr name="state_layout_content_ref" format="reference"/>
        <attr name="state_layout_loading_ref" format="reference"/>
        <attr name="state_layout_empty_ref" format="reference"/>
        <attr name="state_layout_error_ref" format="reference"/>
    </declare-styleable>
</resources>